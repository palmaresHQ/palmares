{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"]
    },
    "copy:templates": {
      "cache": false
    },
    "build:watch": {
      "persistent": true,
      "cache": true,
      "outputs": [
        "packages/**/dist/**",
        "lib/**/dist/**"
      ]
    },
    "publish": {
      "cache": false,
      "dependsOn": [
        "build"
      ]
    },
    "dev": {
      "dependsOn": [
        "build:watch"
      ]
    }
  }
}
